{
  "name": "client",
  "version": "0.1.0",
  "private": true,
  "devDependencies": {
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "http-proxy-middleware": "^1.0.0",
    "node-sass": "^4.13.1",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "3.4.0",
    "searchkit": "^2.4.1-alpha.3",
    "typescript": "^3.8.3"
  },
  "dependencies": {},
  "scripts": {
    "start": "react-scripts start",
    "watch": "nodemon",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "format": "prettier --write -l \"./src/**/*.{ts,tsx,json,scss}\" && eslint --fix src/ --ext .ts,.tsx",
    "cold": "sed -i \"s:require.resolve('react-dev-utils/webpackHotDevClient'):null:\" node_modules/react-scripts/config/webpack.config.js"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "proxy": "http://localhost:9200/",
  "nodemonConfig": {
    "watch": [
      "src",
      "public"
    ],
    "ext": "ts,tsx,scss",
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "exec": "npm run build",
    "delay": "200"
  }
}
