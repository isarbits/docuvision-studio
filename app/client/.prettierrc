  "singleQuote": true,
  "trailingComma": "all",
  "tabWidth": 4,
  "printWidth": 100,
  "overrides": [
    {
      "files": "*.json",
      "options": {
        "tabWidth": 2
      }
    },
    {
      "files": ["*.scss", "*.less", "*.css"],
      "options": {
        "singleQuote": false
      }
    }
  ]
}