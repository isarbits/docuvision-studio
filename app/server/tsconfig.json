{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es6",
      "dom",
      "es2015",
      "esnext"
    ],
    "composite": true,
    "module": "commonjs",
    "noImplicitAny": false,
    "noLib": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "removeComments": true,
    "sourceMap": true,
    "target": "es6",
    "typeRoots": [
      "./types"
    ],
    "types": [
      "node"
    ]
  },
  "exclude": [
    "node_modules/**/*"
  ],
  "include": [
    "src/**/*",
    "test/**/*",
    "config/**/*"
  ]
}